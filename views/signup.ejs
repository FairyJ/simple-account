<%- include('template/header') %>

<%- include('template/navBar') %>
<div class="wrapper " style="width: 400px; padding: 3%; margin: auto;">
    <h2>Sign Up</h2>
    <p>Please fill this form to create an account.</p>

    <% if (errors && errors.mongodb && errors.mongodb !== ""){%>
    <p><%= errors.mongodb %></p>
    <%}%>
    <form action="/signup" method="POST">
        <div class="form-group">
            <label for="firstName">First Name </label>
            <input type="text" id="firstName" name="firstName" class="form-control" value="" />
            <% if(errors && errors.firstName && errors.firstName !== ""){%>
    <div class="alert  alert-dismissible " role="alert">
        <p style="color: red;"><%= errors.firstName %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <%}%>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="form-control" value="" />
            <% if(errors && errors.lastName && errors.lastName !== ""){%>
    <div class="alert  alert-dismissible " role="alert">
        <p style="color: red;"><%= errors.lastName %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <%}%>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" value="" />
            <% if(errors && errors.email && errors.email !== ""){%>
    <div class="alert  alert-dismissible " role="alert">
        <p style="color: red;"><%= errors.email %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <%}%>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" value="" />
            <% if(errors && errors.password && errors.password !== ""){%>
    <div class="alert  alert-dismissible " role="alert">
        <p style="color: red;"><%= errors.password %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <%}%>
        </div>
        <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" value="" />
                <div class="alert  alert-dismissible " role="alert">
                    <% if(errors && errors.confirmPassword && errors.confirmPassword !== ""){%>
    <p style="color: red;"><%= errors.confirmPassword %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        <%}%>
                    </button>
                </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-info" value="Submit" />
            <input type="reset" class="btn btn-outline-info" value="Reset" />
        </div>
        <p>Already have an account? <a href="/login" style=" color : #34bbc0f1">Login here</a>.</p>
    </form>

</div>
<%- include('template/footer') %>