<%- include('template/header') %>

<%- include('template/navBar') %>
<div class="wrapper " style="width: 400px; padding: 3%; margin: auto;">

    <h2>Login</h2>
    <p>Please fill in your credentials to login.</p>
    <form action="/login" method="POST">
        <div class="form-group ">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" class="form-control" value="">
        </div>
        <div class="form-group ">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-outline-info" value="Login">
        </div>
        <div class="alert  alert-dismissible " role="alert">
            <% if( errors && errors.loginError && errors.loginError !== ""){%>
            <p style="color: red;"><%= errors.loginError %></p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <%}%>
              </div>
            <p>Don't have an account? <a href="/signup" style=" color : #34bbc0f1">Sign up now</a>.</p>

        </form>
</div>

<%- include('template/footer') %>